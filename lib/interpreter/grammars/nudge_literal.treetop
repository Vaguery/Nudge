require 'interpreter/grammars/nudge_common'

grammar NudgeLiteral
  include NudgeCommon
  
  rule literal
    'literal' spcs type spcs? '(' guts ')'
  end
  
  rule type
    alphas_and_underscores
  end
  
  rule escaped_paren
    '\)' / '\('
  end
  
  rule escaped_backslash
    '\\'
  end
  
  rule guts
    (escaped_paren /
     escaped_backslash /
     (!')' .)
    )+
  end
end